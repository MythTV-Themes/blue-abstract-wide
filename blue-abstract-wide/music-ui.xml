        </buttontree>

        <!-- ================================================================== -->
        <!-- this is the background for the information at the bottom -->
        <shape name="music_details_background" from="base_background_shape">
            <!--<area>125,70,1030,436</area>-->
            <area>25,465,1230,230</area>
        </shape>

        <shape name="cover_background" from="base_background_shape">
            <area>45,485,190,190</area>
        </shape>

        <imagetype name="coverart">
            <area>46,486,188,188</area>
            <filename />
            <preserveaspect>true</preserveaspect>
        </imagetype>

        <textarea name="title" from="base_textarea">
            <area>255,484,580,30</area>
            <multiline>no</multiline>
            <font>title</font>
            <align>left</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="album" from="base_textarea">
            <area>255,520,580,30</area>
            <multiline>no</multiline>
            <font>text_small</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="artist" from="base_textarea">
            <area>255,560,580,30</area>
            <multiline>no</multiline>
            <font>text_small</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="time" from="base_textarea">
            <area>255,600,580,30</area>
            <multiline>no</multiline>
            <font>text_small</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <textarea name="info" from="base_textarea">
            <area>255,640,580,30</area>
            <multiline>no</multiline>
            <font>text_small</font>
            <align>left,vcenter</align>
            <cutdown>yes</cutdown>
        </textarea>

        <progressbar name="progress" from="base_progressbar">
            <position>255,680</position>
        </progressbar>

    </window>






