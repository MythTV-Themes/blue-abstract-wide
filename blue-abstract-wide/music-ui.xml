<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <!--<window name="albumart_browser">-->


    <!-- shows all the available music in a column list. the
        user can select it and add it to a playlist. -->
    <window name="music_select">

        <font name="text" face="DejaVu Sans">
            <color>#FFFFFF</color>
            <size>15</size>
            <bold>no</bold>
        </font>

        <font name="text_inactive" face="DejaVu Sans">
            <color>#999999</color>
            <size>15</size>
            <bold>no</bold>
        </font>

        <!-- The (unchanging) background images -->
        <container name="background">

            <image name="page_background" draworder="0" fleximage="no">
                <filename>images/background.png</filename>
                <position>0,0</position>
                <staticsize>1280,720</staticsize>
            </image>

            <!-- The background for the music selection columns -->
            <image name="music_tree_background" draworder="0" fleximage="no">
                <filename>images/shared/music/music_tree_background.png</filename>
                <position>25,70</position>
                <staticsize>1230,450</staticsize>
            </image>
            <image name="music_tree_separator_1" draworder="0" fleximage="no">
                <filename>images/shared/music/music_tree_separator.png</filename>
                <position>435,90</position>
                <staticsize>1,400</staticsize>
            </image>
            <image name="music_tree_separator_2" draworder="0" fleximage="no">
                <filename>images/shared/music/music_tree_separator.png</filename>
                <position>845,90</position>
                <staticsize>1,400</staticsize>
            </image>

            <!-- The background image for the selection information at the bottom -->
            <image name="music_selection_background" draworder="0" fleximage="no">
                <filename>images/shared/music/music_tree_background.png</filename>
                <position>25,545</position>
                <staticsize>1230,150</staticsize>
            </image>
        </container>

        <container name="musictree">
            <area>0,0,1280,510</area>

            <textarea name="page_title_text" draworder="1">
                <font>text</font>
                <area>15,7,215,40</area>
                <value>Select music</value>
            </textarea>
            <!--<textarea name="clock_text" draworder="1">
                <font>text</font>
                <area>1080,7,215,40</area>
                <value>Not supported yet</value>
            </textarea>-->

            <listtreearea name="musictree" draworder="0">
                <area>45,90,1190,450</area>
                <listsize>0,0,370,420</listsize>
                <leveloffset>40</leveloffset>
                <gradient type="unselected" start="#535353" end="#2b2b2b" alpha="255"></gradient>
                <gradient type="selected" start="#3699f0" end="#1c47ca" alpha="255"></gradient>
                <fcnfont name="text" function="active"></fcnfont>
                <fcnfont name="text_inactive" function="inactive"></fcnfont>
            </listtreearea>
        </container>

        <container name="info">
            <area>0,545,1280,130</area>
            <textarea name="line1" draworder="1">
                <font>text</font>
                <area>45,20,1190,40</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="line2" draworder="1">
                <font>text</font>
                <area>45,63,1190,40</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="line3" draworder="1">
                <font>text</font>
                <area>45,106,1190,40</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="line4" draworder="1">
                <font>text</font>
                <area>45,149,1190,40</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="line5" draworder="1">
                <font>text</font>
                <area>45,192,1190,40</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="line6" draworder="1">
                <font>text</font>
                <area>45,235,1190,40</area>
                <cutdown>yes</cutdown>
            </textarea>
        </container>

    </window>






    <!-- shows the music in a three column list. the user can select the playlists and the
        songs. The screen also displays information about the currently active song. -->
    <window name="music_play">

        <font name="text" face="DejaVu Sans">
            <color>#FFFFFF</color>
            <size>15</size>
            <bold>no</bold>
        </font>

        <font name="text_inactive" face="DejaVu Sans">
            <color>#999999</color>
            <size>15</size>
            <bold>no</bold>
        </font>

        <font name="text_yellow" face="DejaVu Sans">
            <color>#FFFF00</color>
            <size>15</size>
            <bold>no</bold>
        </font>

        <font name="text_small" face="DejaVu Sans">
            <color>#999999</color>
            <size>15</size>
            <bold>no</bold>
        </font>

        <font name="title" face="DejaVu Sans">
            <color>#999999</color>
            <size>20</size>
            <bold>no</bold>
        </font>

        <!-- The (unchanging) background images -->
        <container name="background">

            <image name="page_background" draworder="0" fleximage="no">
                <filename>images/background.png</filename>
                <position>0,0</position>
                <staticsize>1280,720</staticsize>
            </image>

            <!-- The background for the music selection columns -->
            <image name="music_tree_background" draworder="0" fleximage="no">
                <filename>images/shared/music/music_tree_background.png</filename>
                <position>25,70</position>
                <staticsize>1230,320</staticsize>
            </image>
            <image name="music_tree_separator_1" draworder="0" fleximage="no">
                <filename>images/shared/music/music_tree_separator.png</filename>
                <position>435,90</position>
                <staticsize>1,280</staticsize>
            </image>
            <image name="music_tree_separator_2" draworder="0" fleximage="no">
                <filename>images/shared/music/music_tree_separator.png</filename>
                <position>846,90</position>
                <staticsize>1,280</staticsize>
            </image>

            <!-- The background image for the selection information at the bottom -->
            <image name="track_info_background" draworder="0" fleximage="no">
                <filename>images/shared/music/track_info_background.png</filename>
                <position>25,415</position>
                <staticsize>1230,280</staticsize>
            </image>
            <image name="cover_background_shape" draworder="0" fleximage="no">
                <filename>images/shared/music/cover_background_shape.png</filename>
                <position>45,439</position>
                <staticsize>220,220</staticsize>
            </image>
            <image name="button_separator" draworder="0" fleximage="no">
                <filename>images/shared/music/button_separator.png</filename>
                <position>305,615</position>
                <staticsize>930,1</staticsize>
            </image>
            <image name="cover_separator" draworder="0" fleximage="no">
                <filename>images/shared/music/cover_separator.png</filename>
                <position>285,430</position>
                <staticsize>1,245</staticsize>
            </image>
        </container>

        <!-- The view of playlists; tracks at the top -->
        <container name="musicselector">
            <area>0,0,1280,370</area>

            <textarea name="page_title_text" draworder="1">
                <font>text</font>
                <area>15,7,215,40</area>
                <value>Listen to music</value>
            </textarea>
            <textarea name="clock_text" draworder="1">
                <font>text</font>
                <area>1080,7,215,40</area>
                <value>Not supported yet</value>
            </textarea>

            <!-- First appearance of a managedtreelist. I'll explain as we go
                bins is how many visible layers of the	tree there are. -->
            <managedtreelist name="musictreelist" draworder="1" bins="3">
                <!-- regular area, but is only used if the user has ShowWholeTree set to false. -->
                <area>0,0,1190,300</area>

                <!-- An image to show the current navigation node -->
                <image function="selectionbar" filename="images/shared/music/selection.png"></image>

                <!-- Some arrow images -->
                <image function="uparrow" filename="images/shared/arrow_up.png"></image>
                <image function="downarrow" filename="images/shared/arrow_down.png"></image>
                <image function="leftarrow" filename="images/shared/arrow_left.png"></image>
                <image function="rightarrow" filename="images/shared/arrow_right.png"></image>

                <!-- the area of particular bins. you can make them show right to left,
                    top to bottom, and layer graphics on top however you like
                    NB: bins number 1 to # of bins inclusive not 0 to #-1 -->
                <bin number="1">
                    <area>45,80,370,280</area>
                    <fcnfont name="text" function="active"></fcnfont>
                    <fcnfont name="text_yellow" function="selected"></fcnfont>
                    <fcnfont name="text_inactive" function="inactive"></fcnfont>
                </bin>
                <bin number="2">
                    <area>455,80,370,280</area>
                    <fcnfont name="text" function="active"></fcnfont>
                    <fcnfont name="text_yellow" function="selected"></fcnfont>
                    <fcnfont name="text_inactive" function="inactive"></fcnfont>
                </bin>
                <bin number="3">
                    <area>865,80,370,290</area>
                    <fcnfont name="text" function="active"></fcnfont>
                    <fcnfont name="text_yellow" function="selected"></fcnfont>
                    <fcnfont name="text_inactive" function="inactive"></fcnfont>
                </bin>
            </managedtreelist>
        </container>

        <!-- An area to hold info about the playing track -->
        <container name="trackinfo">
            <area>0,430,1280,255</area>

            <textarea name="title_text" draworder="1">
                <font>title</font>
                <area>307,10,960,40</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="artist_text" draworder="1">
                <font>text</font>
                <area>307,60,960,40</area>
                <cutdown>yes</cutdown>
            </textarea>
            <textarea name="album_text" draworder="1">
                <font>text</font>
                <area>307,100,960,40</area>
                <cutdown>yes</cutdown>
            </textarea>

            <!-- draw the progressbar and the (elapsed) time of the current song -->
            <textarea name="time_text" draworder="1">
                <font>text</font>
                <area>825,144,200,40</area>
                <cutdown>no</cutdown>
            </textarea>
            <textarea name="info_text" draworder="1">
                <font>text</font>
                <area>1025,144,230,40</area>
            </textarea>
            <statusbar name="progress_bar" draworder="2" whitespace="5">
                <position>305,145</position>
                <container fleximage="no">images/widgets/progressbar/progressbar_inactive.png</container>
                <fill>images/widgets/progressbar/progressbar_active.png</fill>
                <orientation>LeftToRight</orientation>
            </statusbar>

            <!-- shows the rating of the music -->
            <repeatedimage name="ratings_background" draworder="1" fleximage="no">
                <filename>images/widgets/rating/stars_background.png</filename>
                <area>820,88,90,18</area>
                <orientation>LeftToRight</orientation>
            </repeatedimage>

            <repeatedimage name="ratings_image" draworder="1" fleximage="no">
                <filename>images/widgets/rating/1.0_star.png</filename>
                <area>820,88,90,18</area>
                <orientation>LeftToRight</orientation>
            </repeatedimage>

            <!-- shows the cover or the visualization? -->
            <blackhole name="visual_blackhole">
                <area>46,10,218,218</area>
            </blackhole>
            <textarea name="current_visualization_text" draworder="1" align="center">
                <font>text_small</font>
                <area>46,226,220,40</area>
                <cutdown>no</cutdown>
            </textarea>
        </container>

        <!-- On screen volume display -->
        <container name="volumedisplay">
            <area>1168,360,40,200</area>
            <statusbar name="volume_status" draworder="-1" whitespace="5">
                <container fleximage="no">mm_volume_background.png</container>
                <fill>mm_volume_tick.png</fill>
                <position>0,0</position>
                <orientation>BottomToTop</orientation>
            </statusbar>
        </container>

        <!-- All the buttons -->
        <container name="musicbuttons">
            <area>305,635,820,40</area>

            <textbutton name="shuffle_button" draworder="0">
                <position>0,0</position>
                <image function="on" filename="images/widgets/button_active.png"></image>
                <image function="off" filename="images/widgets/button_inactive.png"></image>
                <image function="pushed" filename="images/widgets/button_active.png"></image>
                <font>text_small</font>
            </textbutton>

            <textbutton name="repeat_button" draworder="0">
                <position>170,0</position>
                <image function="on" filename="images/widgets/button_active.png"></image>
                <image function="off" filename="images/widgets/button_inactive.png"></image>
                <image function="pushed" filename="images/widgets/button_active.png"></image>
                <font>text_small</font>
            </textbutton>

            <textbutton name="pledit_button" draworder="0">
                <position>340,0</position>
                <image function="on" filename="images/widgets/button_active.png"></image>
                <image function="off" filename="images/widgets/button_inactive.png"></image>
                <image function="pushed" filename="images/widgets/button_active.png"></image>
                <font>text_small</font>
            </textbutton>

            <textbutton name="vis_button" draworder="0">
                <position>660,0</position>
                <image function="on" filename="images/widgets/button_active.png"></image>
                <image function="off" filename="images/widgets/button_inactive.png"></image>
                <image function="pushed" filename="images/widgets/button_active.png"></image>
                <font>text_small</font>
            </textbutton>

            <!-- these buttons are invisible due to being
                placed almost outside of the screen -->
            <pushbutton name="prev_button" draworder="0">
                <position>201,60</position>
                <image function="on" filename="images/shared/music/backward.png"></image>
                <image function="off" filename="images/shared/music/backward.png"></image>
                <image function="pushed" filename="images/shared/music/backward.png"></image>
            </pushbutton>

            <pushbutton name="rew_button" draworder="0">
                <position>316,60</position>
                <image function="on" filename="images/shared/music/backward.png"></image>
                <image function="off" filename="images/shared/music/backward.png"></image>
                <image function="pushed" filename="images/shared/music/backward.png"></image>
            </pushbutton>

            <pushbutton name="pause_button" draworder="0">
                <position>431,60</position>
                <image function="on" filename="images/shared/music/pause.png"></image>
                <image function="off" filename="images/shared/music/pause.png"></image>
                <image function="pushed" filename="images/shared/music/pause.png"></image>
            </pushbutton>

            <pushbutton name="play_button" draworder="0">
                <position>546,60</position>
                <image function="on" filename="images/shared/music/play.png"></image>
                <image function="off" filename="images/shared/music/play.png"></image>
                <image function="pushed" filename="images/shared/music/play.png"></image>
            </pushbutton>

            <pushbutton name="stop_button" draworder="0">
                <position>661,60</position>
                <image function="on" filename="images/shared/music/stop.png"></image>
                <image function="off" filename="images/shared/music/stop.png"></image>
                <image function="pushed" filename="images/shared/music/stop.png"></image>
            </pushbutton>

            <pushbutton name="ff_button" draworder="0">
                <position>776,60</position>
                <image function="on" filename="images/shared/music/forward.png"></image>
                <image function="off" filename="images/shared/music/forward.png"></image>
                <image function="pushed" filename="images/shared/music/forward.png"></image>
            </pushbutton>

            <pushbutton name="next_button" draworder="0">
                <position>891,60</position>
                <image function="on" filename="images/shared/music/forward.png"></image>
                <image function="off" filename="images/shared/music/forward.png"></image>
                <image function="pushed" filename="images/shared/music/forward.png"></image>
            </pushbutton>

        </container>

    </window>


    <!-- ================================================================== -->
    <!-- shows the music in a three column list. Not required until the port
        to mythui is complete. -->
    <window name="musicplayer">

        <imagetype name="background">
            <area>0,0,1280,720</area>
            <filename>images/background.png</filename>
                </imagetype>

        <textarea name="heading" from="base_heading">
            <position>0,0</position>
            <textarea name="text">
                <value>Importing CD</value>
            </textarea>
        </textarea>

        <textarea name="clock" from="base_clock">
            <position>1040,0</position>
        </textarea>

        <shape name="musicplayer_background" from="base_background_shape">
            <area>25,70,1230,625</area>
        </shape>

        <!-- ================================================================== -->
        <!-- this is the background behind the music directory list -->
        <shape name="music_tree_background" from="base_background_shape">
            <area>70,70,1135,375</area>
        </shape>

        <!-- shows the current path and where we are in the music tree -->
        <textarea name="breadcrumbs" from="base_textarea">
            <area>90,90,920,30</area>
