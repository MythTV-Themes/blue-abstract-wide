        <description lang="DE">Filme, Serien und Internetvideos anschauen</description>
        <action>MENU menu/videos_menu.xml</action>
    </button>

    <button>
        <type>MENU_MUSIC</type>
        <text>Music</text>
        <text lang="DE">Musik</text>
        <description>Listen to your music or from the internet</description>
        <description lang="DE">HÃ¶re Deine Musik oder aus dem Internet</description>
        <action>MENU menu/music_menu.xml</action>
        <depends>mythmusic</depends>
    </button>

    <button>
        <type>MENU_PICTURES</type>
        <text>Pictures</text>
        <text lang="DE">Bilder</text>
