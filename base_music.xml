    <!-- Shows the playlist moving state as images -->
    <statetype name="base_music_movestate">
        <area>0,0,36,36</area>
        <!-- workaround because the off state is not active as a default -->
        <imagetype name="movestate_image" from="base_icon_inactive">
            <filename>images/icons/move.png</filename>
            <area>5,5,26,26</area>
        </imagetype>
        <state name="off">
            <imagetype name="movestate_image" from="base_icon_inactive">
                <filename>images/icons/move.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
        <state name="on">
            <imagetype name="movestate_image" from="base_icon_selected">
                <filename>images/icons/move.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
    </statetype>


    <!-- Shows if the track is in a playlist -->
    <statetype name="base_music_playliststate">
        <area>0,0,36,36</area>
        <state name="off">
            <imagetype name="playliststate_image" from="base_icon_inactive">
                <filename>images/icons/playlist.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
        <state name="on">
            <imagetype name="playliststate_image" from="base_icon_selected">
                <filename>images/icons/playlist.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
    </statetype>


    <!-- Shows the playing state as images -->
    <statetype name="base_music_playstate">
        <area>0,0,36,36</area>
        <state name="default">
            <imagetype name="playstateimage" from="base_icon_inactive">
                <filename>images/icons/music_play.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
        <state name="playing">
            <imagetype name="playstateimage" from="base_icon_selected">
                <filename>images/icons/music_play.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
        <state name="paused">
            <imagetype name="playstateimage" from="base_icon_selected">
                <filename>images/icons/music_pause.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
        <state name="stopped">
            <imagetype name="playstateimage" from="base_icon_selected">
                <filename>images/icons/music_stop.png</filename>
                <area>5,5,26,26</area>
            </imagetype>
        </state>
    </statetype>


    <!-- Shows the repeat types as images -->
