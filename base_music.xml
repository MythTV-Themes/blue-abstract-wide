    <!-- Shows track information and the shuffle and repeat states -->
    <group name="base_current_playlistinfo_group">
        
        <!-- Current track name -->
        <textarea name="title" from="base_textarea">
            <area>15,0,600,30</area>
            <scroll direction="horizontal" rate="35"/>
            <template>Now Playing: %TITLE% by %ARTIST% on %ALBUM%</template>
        </textarea>

        <!-- Track length -->
        <textarea name="time" from="base_textarea">
            <area>625,0,150,30</area>
            <align>right,vcenter</align>
        </textarea>

        <!-- Playlist time -->
        <textarea name="playlisttime" from="base_textarea">
            <area>785,0,190,30</area>
            <align>right,vcenter</align>
        </textarea>

        <!-- Repeat state -->
        <statetype name="repeatstate" from="base_music_repeatstate">
            <area>995,-3,36,36</area>
        </statetype>

        <!-- Shuffle state -->
        <statetype name="shufflestate" from="base_music_shufflestate">
            <area>1035,-3,36,36</area>
        </statetype>
        
        <!-- Current number in the playlist -->
        <textarea name="playlistposition" from="base_textarea">
            <area>1075,0,160,30</area>
            <align>right,vcenter</align>
        </textarea>

    </group>
    
    
    
    
    
    <!-- The active playlist with more details about the tracks -->
    <group name="base_current_playlist_group">
    
        <buttonlist name="currentplaylist" from="base_buttonlist">
            <area>0,0,1210,125</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <spacing>3</spacing>
            <statetype name="buttonitem">
                <state name="active">
                    <area>0,0,1210,36</area>

                    <imagetype name="buttonimage">
                        <area>5,4,28,28</area>
                        <filename />
                    </imagetype>
                    <shape name="buttonimage_background" from="base_background_shape">
                        <area>4,3,30,30</area>
                        <fill color="#000000" alpha="0" />
                        <cornerradius>0</cornerradius>
                    </shape>

                    <textarea name="tracknum" from="base_textarea">
                        <area>50,3,50,30</area>
                        <template>%DISCNUM%.%TRACKNUM%</template>
                    </textarea>
                    <textarea name="title" from="base_textarea">
                        <!--<area>8,3,742,30</area>-->
                        <area>110,3,260,30</area>
                        <scroll direction="horizontal" rate="35"/>
                        <template>%TITLE%</template>
                        <!--<template>%TITLE% by %ARTIST% on %ALBUM%</template>-->
                    </textarea>
                    <textarea name="album" from="base_textarea">
                        <area>380,3,225,30</area>
                        <align>right,vcenter</align>
                        <scroll direction="horizontal" rate="35"/>
                        <template>%ALBUM%</template>
                    </textarea>
                    <textarea name="artist" from="base_textarea">
                        <area>615,3,215,30</area>
                        <align>right,vcenter</align>
                        <scroll direction="horizontal" rate="35"/>
                        <template>%ARTIST%</template>
                    </textarea>
                    <textarea name="genre" from="base_textarea">
                        <!--<area>760,3,230,30</area>-->
                        <area>840,3,160,30</area>
                        <align>right,vcenter</align>
                        <scroll direction="horizontal" rate="35"/>
                        <template>%GENRE%</template>
                    </textarea>
                        
                    <textarea name="length" from="base_textarea">
                        <area>1020,3,90,30</area>
                        <align>right,vcenter</align>
                    </textarea>

                    <statetype name="movestate" from="base_music_movestate">
                        <area>1127,0,36,36</area>
                    </statetype>
                    <statetype name="playstate" from="base_music_playstate">
                        <area>1167,0,36,36</area>
                    </statetype>
                </state>
                <state name="inactive" from="active"/>
                <state name="selectedactive" from="active">
                    <area>0,0,1210,36</area>
                    <shape name="background" from="base_button_shape_selectedactive" />
                </state>
                <state name="selectedinactive" from="active">
                    <area>0,0,1210,36</area>
                    <shape name="background" from="base_button_shape_selectedinactive" />
                </state>
            </statetype>
            
            <statetype name="upscrollarrow">
                <position>100%-30,100%-10</position>
            </statetype>

            <statetype name="downscrollarrow">
                <position>100%-55,100%-10</position>
            </statetype>
        </buttonlist>
        
    </group>
    
</mythuitheme>
