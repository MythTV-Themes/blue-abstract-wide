        <area>0,0,36,36</area>
        <state name="off">
            <imagetype name="repeatstate_image" from="base_icon_inactive">
                <area>3,3,30,30</area>
                <filename>images/icons/music_repeat_all.png</filename>
            </imagetype>
        </state>
        <state name="track">
            <imagetype name="repeatstate_image" from="base_icon_selected">
                <area>3,3,30,30</area>
