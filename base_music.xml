            </state>
            <state name="selected">
                <imagetype name="image" from="base_image_selected">
                    <filename>images/icons/add.png</filename>
                    <area>3,3,30,30</area>
                </imagetype>
            </state>
            <state name="disabled" from="active" />
            <state name="pushed">
                <imagetype name="image" from="base_image_pushed">
                    <filename>images/icons/add.png</filename>
                    <area>3,3,30,30</area>
                </imagetype>
            </state>
